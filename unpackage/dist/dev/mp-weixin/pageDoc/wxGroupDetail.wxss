
page {
	background-color: #f5f5f5;
}
.itemView {
	border: 1rpx solid #ddd;
	border-radius: 10rpx;
	overflow: hidden;
}
.contentView {
	background-color: #fff;
	padding: 15rpx;
}
.label {
	width: 160rpx;
	flex-shrink: 0;
}
.content {
	flex-grow: 1;
}
.content_input:hover {
	border: 1px solid #007aff;
}
.content_input {
	text-align: center;
	border: 1px solid #eee;
	height: 56rpx;
	border-radius: 10rpx;
	font-weight: 400;
}
